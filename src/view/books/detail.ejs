<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Details</title>
</head>
<body>
    <h1>Book Details</h1>
    <form action="/admin/books/<%= book.id %>" method="POST">
        <div>
            <label for="name">Book Name</label>
            <input type="text" name="name" id="name" value="<%= book.name %>" readonly>
        </div>
        <div>
            <label for="publisher_id">Publisher</label>
            <input type="number" name="publisher_id" id="publisher_id" value="<%= book.publisher_id %>" readonly>
        </div>
        <div>
            <label for="author_id">Author</label>
            <input type="number" name="author_id" id="author_id" value="<%= book.author_id %>" readonly>
        </div>
        <div>
            <label for="category_id">Category</label>
            <input type="number" name="category_id" id="category_id" value="<%= book.category_id %>" readonly>
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" name="price" id="price" value="<%= book.price %>" readonly>
        </div>
        <div>
            <label for="publication_year">Publication Year</label>
            <input type="number" name="publication_year" id="publication_year" value="<%= book.publication_year %>" readonly>
        </div>
        <div>
            <label for="number_of_publication">Number of Publication</label>
            <input type="number" name="number_of_publication" id="number_of_publication" value="<%= book.number_of_publication %>" readonly>
        </div>
        <div>
            <button type="button" onclick="window.location.href='/admin/books/<%= book.id %>/edit';">Edit</button>
            <form action="/admin/books/<%= book.id %>/delete" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
            </form>
        </div>
        <button type="button" onclick="window.history.back();">Back</button>
    </form>
</body>
</html>
